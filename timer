css



var timerId;
var score = 0;
var time = 10;
function startTimer() {
  time = 10;
  timer.innerHTML = time;
  timerId = setInterval(() => {
    time--;
    if (time == 0) resetTime(timerId);
    timer.innerHTML = time;
  }, 1000);
}

function resetTime(reset) {
  clearInterval(reset);
  startTimer();
}

startTimer();



